{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "RPG Game Dev Docs",
  "colors": {
    "primary": "#7C3AED",
    "light": "#A78BFA",
    "dark": "#5B21B6"
  },
  "favicon": "/favicon-rpg.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart",
              "project-setup",
              "game-loop"
            ]
          },
          {
            "group": "Game Design",
            "pages": [
              "design/characters",
              "design/world",
              "design/quests",
              "design/inventory"
            ]
          },
          {
            "group": "Player Stats",
            "pages": [
              "stats/core-attributes",
              "stats/combat-stats",
              "stats/secondary-stats",
              "stats/progression"
            ]
          },
          {
            "group": "Gameplay Systems",
            "pages": [
              "systems/combat",
              "systems/leveling",
              "systems/economy",
              "systems/ai"
            ]
          },
          {
            "group": "Customization",
            "pages": [
              "customization/themes",
              "customization/ui",
              "customization/localization"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Endpoints",
            "pages": [
              "api-reference/auth",
              "api-reference/player",
              "api-reference/inventory",
              "api-reference/combat",
              "api-reference/leaderboard"
            ]
          },
          {
            "group": "Webhooks",
            "pages": [
              "api-reference/webhooks/player-events",
              "api-reference/webhooks/rewards"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://rpgdocs.example.com",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Dev Blog",
          "href": "https://rpgdevblog.example.com",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/rpg-light.svg",
    "dark": "/logo/rpg-dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@rpgdocs.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Play Demo",
      "href": "https://play.rpgdemo.com"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/rpgproject",
      "github": "https://github.com/rpgproject",
      "discord": "https://discord.gg/rpgproject",
      "linkedin": "https://linkedin.com/company/rpgproject"
    }
  }
}
